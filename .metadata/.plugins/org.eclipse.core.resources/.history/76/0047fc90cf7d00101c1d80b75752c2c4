package back;

import com.sun.net.httpserver.HttpExchange;
import com.sun.net.httpserver.HttpHandler;
import java.io.*;
import java.nio.charset.StandardCharsets;
import java.sql.*;
import java.util.Map;
import org.mindrot.jbcrypt.BCrypt;
import io.jsonwebtoken.Jwts;
import io.jsonwebtoken.SignatureAlgorithm;
import java.util.Date;
import io.jsonwebtoken.security.Keys;
import java.security.Key;

public class AccountHandler implements HttpHandler {
    
    // Connexion √† la base de donn√©es
    private final Connection connection;
    
    // Cl√© secr√®te utilis√©e pour g√©n√©rer les JWT
    private final String jwtSecret = "maCleSecreteSuperSecurisee";

    public AccountHandler(Connection connection) {
        this.connection = connection;
    }
    
    @Override
    public void handle(HttpExchange exchange) throws IOException {
        try {
            // R√©cup√©ration de la m√©thode HTTP (GET, POST, etc.)
            String method = exchange.getRequestMethod();
            // R√©cup√©ration du chemin de la requ√™te (ex: /account ou /token)
            String context = exchange.getHttpContext().getPath();
            
            // On ne g√®re que les requ√™tes POST pour ce handler
            if ("POST".equalsIgnoreCase(method)) {
                if (context.equals("/account")) {
                    // Cr√©ation d'un compte utilisateur
                    handleCreateAccount(exchange);
                } else if (context.equals("/token")) {
                    // Authentification / g√©n√©ration du token
                    handleLogin(exchange);
                } else {
                    // Si la route n'existe pas
                    sendResponse(exchange, 404, "{\"error\":\"Route inconnue\"}");
                }
            } else {
                // M√©thode HTTP non autoris√©e
                sendResponse(exchange, 405, "{\"error\":\"M√©thode non autoris√©e\"}");
            }
        } catch (Exception e) {
            e.printStackTrace();
            // En cas d'erreur serveur, renvoyer un code 500
            sendResponse(exchange, 500, "{\"error\":\"" + e.getMessage() + "\"}");
        }
    }

    /**
     * Cr√©ation d'un compte utilisateur
     */
    private void handleCreateAccount(HttpExchange exchange) throws IOException {
        try {
            // Lecture du corps de la requ√™te
            String body = new String(exchange.getRequestBody().readAllBytes(), StandardCharsets.UTF_8);
            Map<String, String> data = JsonUtils.parseJson(body);

            // R√©cup√©ration des champs depuis le JSON
            String username = data.get("username");
            String firstname = data.get("firstname");
            String email = data.get("email");
            String password = data.get("password");

            // V√©rification que toutes les donn√©es sont pr√©sentes
            if (username == null || firstname == null || email == null || password == null) {
                sendResponse(exchange, 400, "{\"error\":\"Donn√©es manquantes\"}");
                return;
            }

            // Hashage du mot de passe avec BCrypt
            String hashedPassword = BCrypt.hashpw(password, BCrypt.gensalt());

            // Insertion dans la base de donn√©es
            try (PreparedStatement stmt = connection.prepareStatement(
                    "INSERT INTO users (username, firstname, email, password) VALUES (?, ?, ?, ?)")) {
                stmt.setString(1, username);
                stmt.setString(2, firstname);
                stmt.setString(3, email);
                stmt.setString(4, hashedPassword);
                stmt.executeUpdate();
            }

            // R√©ponse JSON confirmant la cr√©ation
            sendResponse(exchange, 201, "{\"message\":\"Compte cr√©√© avec succ√®s\"}");
        } catch (SQLException e) {
            sendResponse(exchange, 500, "{\"error\":\"Erreur BDD: " + e.getMessage() + "\"}");
        } catch (Exception e) {
            e.printStackTrace();
            sendResponse(exchange, 400, "{\"error\":\"Donn√©es invalides\"}");
        }
    }

    /**
     * Authentification et g√©n√©ration du JWT
     */
    private void handleLogin(HttpExchange exchange) throws IOException {
        try {
            // Lecture du corps de la requ√™te JSON
            String body = new String(exchange.getRequestBody().readAllBytes(), StandardCharsets.UTF_8);
            Map<String, String> data = JsonUtils.parseJson(body);

            String email = data.get("email");
            String password = data.get("password");

            // V√©rification que les champs sont pr√©sents
            if (email == null || password == null) {
                sendResponse(exchange, 400, "{\"error\":\"Donn√©es manquantes\"}");
                return;
            }

            // R√©cup√©ration du hash du mot de passe depuis la BDD
            String storedHash = null;
            try (PreparedStatement stmt = connection.prepareStatement(
                    "SELECT password FROM users WHERE email = ?")) {
                stmt.setString(1, email);
                try (ResultSet rs = stmt.executeQuery()) {
                    if (rs.next()) storedHash = rs.getString("password");
                }
            }

            // V√©rification du mot de passe
            if (storedHash == null || !BCrypt.checkpw(password, storedHash)) {
                sendResponse(exchange, 401, "{\"error\":\"Email ou mot de passe incorrect\"}");
                return;
            }

            // D√©terminer si l'utilisateur est admin
            boolean isAdmin = "admin@admin.com".equals(email);

            // üîë Cl√© fixe s√©curis√©e pour HS256 (‚â•32 caract√®res)
            String jwtSecret = "maCleSecreteSuperSecuriseeTRESLONGUE123456";
            Key key = Keys.hmacShaKeyFor(jwtSecret.getBytes(StandardCharsets.UTF_8));

            // G√©n√©ration du token JWT
            String token = Jwts.builder()
                    .setSubject(email)
                    .claim("isAdmin", isAdmin)
                    .setIssuedAt(new Date())
                    .setExpiration(new Date(System.currentTimeMillis() + 86400000)) // 24h
                    .signWith(key)  // Signature avec cl√© s√©curis√©e
                    .compact();

            System.out.println("Token g√©n√©r√© : " + token);

            // Construction de la r√©ponse JSON
            String response = "{ \"message\": \"Connexion r√©ussie\", \"token\": \"" + token + "\", \"isAdmin\": " + isAdmin + " }";

            // Envoi de la r√©ponse
            sendResponse(exchange, 200, response);

        } catch (Exception e) {
            e.printStackTrace();
            sendResponse(exchange, 500, "{\"error\":\"Erreur interne\"}");
        }
    }

    /**
     * M√©thode utilitaire pour envoyer une r√©ponse JSON
     */
    private void sendResponse(HttpExchange exchange, int status, String response) throws IOException {
        byte[] bytes = response.getBytes(StandardCharsets.UTF_8);
        // Gestion des headers CORS
        exchange.getResponseHeaders().add("Access-Control-Allow-Origin", "http://localhost:4200");
        exchange.getResponseHeaders().add("Access-Control-Allow-Methods", "GET, POST, PUT, DELETE, OPTIONS");
        exchange.getResponseHeaders().add("Access-Control-Allow-Headers", "Content-Type, Authorization");
        exchange.getResponseHeaders().set("Content-Type", "application/json; charset=UTF-8");

        // Envoi du code HTTP et du contenu
        exchange.sendResponseHeaders(status, 0);
        try (OutputStream os = exchange.getResponseBody()) {
            os.write(bytes);
        }
    }
}