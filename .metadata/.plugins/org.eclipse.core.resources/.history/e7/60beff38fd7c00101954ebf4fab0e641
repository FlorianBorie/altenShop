package back;

import com.sun.net.httpserver.HttpServer;
import java.net.InetSocketAddress;
import java.sql.Connection;
import java.sql.DriverManager;
import java.util.concurrent.Executors;

public class Server {
    static Connection connection;

    public static void main(String[] args) {
        try {
            connectDatabase();

            HttpServer server = HttpServer.create(new InetSocketAddress(8000), 0);
            server.createContext("/products", new ProductsHandler(connection));

            // Thread pool pour gérer plusieurs requêtes simultanées
            server.setExecutor(Executors.newFixedThreadPool(10));
            server.start();

            System.out.println("Serveur fonctionne sur http://localhost:8000/products");

            // Fermeture propre de la BDD à l'arrêt du serveur
            Runtime.getRuntime().addShutdownHook(new Thread(() -> {
                try {
                    if (connection != null && !connection.isClosed()) {
                        connection.close();
                        System.out.println("Connexion BDD fermée.");
                    }
                } catch (Exception e) {
                    e.printStackTrace();
                }
            }));

        } catch (Exception e) {
            System.err.println("Erreur serveur : " + e.getMessage());
            e.printStackTrace();
        }
    }

    private static void connectDatabase() throws Exception {
        String host = "localhost";
        String port = "8889";
        String dbName = "productsDB";
        String user = "root";
        String password = "root";
        String url = "jdbc:mysql://" + host + ":" + port + "/" + dbName + "?useSSL=false&serverTimezone=UTC";

        Class.forName("com.mysql.cj.jdbc.Driver");
        connection = DriverManager.getConnection(url, user, password);
        System.out.println("Connexion BDD OK !");
    }
}
