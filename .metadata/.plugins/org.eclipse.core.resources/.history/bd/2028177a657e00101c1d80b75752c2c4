package back;

import com.sun.net.httpserver.HttpServer;
import java.net.InetSocketAddress;
import java.sql.Connection;
import java.sql.DriverManager;
import java.util.concurrent.Executor;

public class Server {
    // Connexion à la BDD
    static Connection connection;

    public static void start() throws Exception {
        connectDatabase();

        HttpServer server = HttpServer.create(new InetSocketAddress(8000), 0);

        // Création des handlers pour les routes /account et /token
        // Ces routes sont gérées par le même handler AccountHandler
        AccountHandler accountHandler = new AccountHandler(connection);
        server.createContext("/account", accountHandler);
        server.createContext("/token", accountHandler);

        // Création du handler pour la route /products
        server.createContext("/products", new ProductsHandler(connection));

        // Utilisation de l'executor par défaut (single-threaded)
        server.setExecutor((Executor) null);

        // Démarrage du serveur
        server.start();
        System.out.println("Serveur fonctionne sur http://localhost:8000/products");
    }

    // Méthode pour connecter la base de données MySQL
    private static void connectDatabase() throws Exception {
        String host = "localhost";
        String port = "8889"; // Port par défaut de MAMP / XAMPP MySQL
        String dbName = "productsDB";
        String user = "root";
        String password = "root";
        // URL de connexion JDBC
        String url = "jdbc:mysql://" + host + ":" + port + "/" + dbName + "?useSSL=false&serverTimezone=UTC";

        // Chargement du driver MySQL
        Class.forName("com.mysql.cj.jdbc.Driver");

        // Connexion à la BDD
        connection = DriverManager.getConnection(url, user, password);
        System.out.println("BDD connexion!");
    }
}
